<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg %replace(, context: %marker){', context: $', ''} %n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>sandbox.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg %mdc%n</pattern>
        </encoder>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
    </appender>

    <appender name="MEM" class="com.daml.platform.testing.LogCollector">
        <test>com.daml.platform.indexer.RecoveringIndexerSpec</test>
    </appender>

    <logger name="com.daml.platform.indexer.RecoveringIndexer" level="INFO">
        <appender-ref ref="MEM" />
    </logger>

    <appender name="JdbcIndexerSpecAppender" class="com.daml.platform.testing.LogCollector">
        <test>com.daml.platform.indexer.JdbcIndexerSpec</test>
    </appender>

    <logger name="com.daml.platform.store.dao.HikariConnection" level="INFO">
        <appender-ref ref="JdbcIndexerSpecAppender" />
    </logger>

    <logger name="io.netty" level="WARN" />
    <logger name="io.grpc.netty" level="WARN" />
    <logger name="akka.event.slf4j" level="WARN" />
    <logger name="daml.tracelog" level="TRACE" />
    <logger name="com.zaxxer.hikari" level="TRACE" />
    <logger name="com.daml.platform.store.dao.DbDispatcher" level="INFO" />
    <logger name="com.daml.platform.store.dao.JdbcLedgerDao" level="WARN" />
    <logger name="java.util.logging" level="TRACE" />

    <root level="TRACE">
        <appender-ref ref="STDOUT"/>
<!--        <appender-ref ref="ASYNC"/>-->
    </root>
</configuration>
